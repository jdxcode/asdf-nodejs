#!/usr/bin/env bash

# simulate tac on macOS
if ! command -v tac &>/dev/null; then
  tac() {
    cat -n "$@" | sort -nrk1 | cut -f2-
  }
fi

set -o nounset -o pipefail -o errexit

# shellcheck source=../lib/utils.sh
source "$(dirname "$0")/../lib/utils.sh"

function print_only_fully_numeric_items() {
  local version_numbers="$1"
  grep -E '^[0-9.]+$' <<< "$version_numbers"
}

"$RTX_NODEJS_PLUGIN_DIR/lib/commands/command-update-nodebuild.bash" &> /dev/null

all_definitions_from_node_build="$(nodebuild_wrapped --definitions)"

# Print
numeric="$(print_only_fully_numeric_items "$all_definitions_from_node_build")"

echo "lts          $(echo "$numeric" | grep -E '^18' | tail -n1)"
echo "lts/hydrogen $(echo "$numeric" | grep -E '^18' | tail -n1)"
echo "lts/gallium  $(echo "$numeric" | grep -E '^16' | tail -n1)"
echo "lts/fermium  $(echo "$numeric" | grep -E '^14' | tail -n1)"
echo "lts/erbium   $(echo "$numeric" | grep -E '^12' | tail -n1)"
echo "lts/dubnium  $(echo "$numeric" | grep -E '^10' | tail -n1)"
echo "lts/carbon   $(echo "$numeric" | grep -E  '^8' | tail -n1)"
echo "lts/boron    $(echo "$numeric" | grep -E  '^6' | tail -n1)"
echo "lts/argon    $(echo "$numeric" | grep -E  '^4' | tail -n1)"
